
@{
    ViewBag.Title = "Index";
}

@if (TempData["Msg"] != null) { 
    <p class="alert alert-info">@TempData["Msg"]</p>
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">BDT @item.Price</p>
                    <a href="/order/addtocart/@item.Id" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>

    }

</div>
